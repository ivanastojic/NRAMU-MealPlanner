<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mealPlannerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.MealPlannerActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/mealPlannerCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#f2ddb6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvTitleMealPlanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meal Planner"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#4f3f0b"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvSubtitleMealPlanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan a meal for the selected day"
                    android:textSize="14sp"
                    android:textColor="#9e8b4d"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="18dp"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFF8E8"
                    android:layout_marginBottom="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSelectedDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date: (not selected)"
                            android:textColor="#4f3f0b"
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPickDate"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:text="Pick a date"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            app:backgroundTint="#b59336"
                            app:cornerRadius="18dp"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meal type"
                    android:textColor="#4f3f0b"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    android:layout_marginBottom="14dp">

                    <Spinner
                        android:id="@+id/spMealType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recipe"
                    android:textColor="#4f3f0b"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    android:layout_marginBottom="14dp">

                    <Spinner
                        android:id="@+id/spRecipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSavePlan"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Save plan"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#b59336"
                    app:cornerRadius="20dp"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:id="@+id/tvPlansTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plans for the selected day"
                    android:textColor="#4f3f0b"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlans"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:clipToPadding="false"
                    android:padding="6dp"
                    android:scrollbars="vertical" />

                <TextView
                    android:id="@+id/tvNoPlans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No plans for the selected day"
                    android:textColor="#9e8b4d"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:visibility="gone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

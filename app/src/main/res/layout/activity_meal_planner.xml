<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mealPlannerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.MealPlannerActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/mealPlannerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#f2ddb6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- NASLOV -->
            <TextView
                android:id="@+id/tvTitleMealPlanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal Planner"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#4f3f0b"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tvSubtitleMealPlanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planiraj obrok za odabrani dan"
                android:textSize="14sp"
                android:textColor="#9e8b4d"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>

            <!-- DATUM -->
            <TextView
                android:id="@+id/tvSelectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datum: (nije odabran)"
                android:textColor="#4f3f0b"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPickDate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Odaberi datum"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="#b59336"
                app:cornerRadius="20dp"
                android:layout_marginBottom="16dp"/>

            <!-- MEAL TYPE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vrsta obroka"
                android:textColor="#4f3f0b"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@android:color/white"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                android:layout_marginBottom="14dp">

                <Spinner
                    android:id="@+id/spMealType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- RECIPE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recept"
                android:textColor="#4f3f0b"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@android:color/white"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                android:layout_marginBottom="16dp">

                <Spinner
                    android:id="@+id/spRecipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- SPREMI -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSavePlan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Spremi plan"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="#b59336"
                app:cornerRadius="20dp"
                android:layout_marginBottom="16dp"/>

            <!-- LISTA PLANOVA -->
            <TextView
                android:id="@+id/tvPlansTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Planovi za odabrani dan"
                android:textColor="#4f3f0b"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPlans"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@android:color/white"
                android:padding="10dp"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/tvNoPlans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nema planova za odabrani dan"
                android:textColor="#9e8b4d"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="8dp"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

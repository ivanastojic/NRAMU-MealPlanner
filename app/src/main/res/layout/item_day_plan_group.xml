<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFF8E8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2026-01-15"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#4f3f0b"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvBreakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ³ DoruÄak: -"
            android:textColor="#6b5a20"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ RuÄak: -"
            android:textColor="#6b5a20"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¥— VeÄera: -"
            android:textColor="#6b5a20"/>

        <TextView
            android:id="@+id/tvHintDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klikni za detalje"
            android:textSize="12sp"
            android:textColor="#9e8b4d"
            android:layout_marginTop="10dp"
            android:alpha="0.9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:alpha="0.15"
            android:background="#6b5a20"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MealPlanner">
        <activity android:name=".activities.RecipesListActivity" />
        <activity android:name=".activities.RecipeDetailsActivity" />
        <activity android:name=".activities.AddRecipeActivity" />
        <activity android:name=".activities.EditRecipeActivity" />
        <activity android:name=".activities.MealPlannerActivity" />
        <activity android:name=".activities.MyMealPlansActivity" />
        <activity android:name=".activities.EditMealPlanActivity" />
        <activity android:name=".activities.DayPlansActivity" />



        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />

    </application>

</manifest>
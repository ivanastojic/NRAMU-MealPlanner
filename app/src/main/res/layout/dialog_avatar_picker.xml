<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:padding="16dp">

    <ImageView
        android:id="@+id/avatarFemale1"
        android:src="@drawable/avatar_female1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/avatarFemale2"
        android:src="@drawable/avatar_female2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/avatarMale1"
        android:src="@drawable/avatar_male1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/avatarMale2"
        android:src="@drawable/avatar_male2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"/>

</GridLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadinaaa">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome back ðŸ‘‹"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#4f3f0b"
        android:layout_marginTop="40dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTodayPlan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#FFF2B2"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Œ"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tvTodayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, 20.01.2026"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#5D4037"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvTodayPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ½ï¸ Lunch: Chicken with rice\nðŸŒ™ Dinner: Soup"
                android:textSize="14sp"
                android:textColor="#4E342E"
                android:lineSpacingExtra="4dp"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#FFF8E8"
        app:itemIconTint="#6b5a20"
        app:itemTextColor="#6b5a20"
        app:itemRippleColor="#E6D8B5"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <EditText
        android:id="@+id/etEditRecipeTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Naziv recepta"
        android:textSize="18sp"
        android:background="@drawable/rounded_edittext"
        android:padding="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIngredientsEdit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <EditText
                android:id="@+id/etIngredientName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="ðŸ¥£ Sastojak"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/etQuantity"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:hint="ðŸ“ KoliÄina"
                    android:inputType="numberDecimal"
                    android:background="@drawable/rounded_edittext"
                    android:padding="16dp"/>

                <Spinner
                    android:id="@+id/spUnit"
                    android:layout_width="120dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_edittext"/>
            </LinearLayout>

            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="ðŸ“ Napomena (opcionalno)"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddIngredientEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Dodaj sastojak"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveRecipeEdit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Spremi promjene"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:cornerRadius="20dp"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHeaderShoppingDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="22dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#f2ddb6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:id="@+id/tvListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping lista"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#4f3f0b"/>

            <TextView
                android:id="@+id/tvListPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2026-01-19 → 2026-01-25"
                android:textSize="13sp"
                android:textColor="#9e8b4d"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/rowActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/cardHeaderShoppingDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegenerate"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Regeneriraj"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#b59336"
            app:cornerRadius="22dp"
            app:strokeColor="#b59336"
            app:strokeWidth="2dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarkAllBought"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Sve kupljeno"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#b59336"
            app:cornerRadius="22dp"
            app:strokeColor="#b59336"
            app:strokeWidth="2dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteList"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Obriši listu"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#b59336"
            app:cornerRadius="22dp"
            app:strokeColor="#b59336"
            app:strokeWidth="2dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShoppingItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:layout_constraintTop_toBottomOf="@id/rowActions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/tvEmptyItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nema stavki u ovoj listi."
        android:gravity="center"
        android:textColor="#9e8b4d"
        android:visibility="gone"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/rowActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"/>

    <ProgressBar
        android:id="@+id/progressItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/rowActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
